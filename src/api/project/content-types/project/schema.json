{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": "Real estate development projects"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": ["available", "sold_out"],
      "default": "available",
      "required": true
    },
    "units": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::unit.unit",
      "mappedBy": "project"
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "priority": {
      "type": "integer",
      "default": 0
    },
    "propertyTypeInfo": {
      "type": "json",
      "required": false
    },
    "propertyTypes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::property-type.property-type",
      "inversedBy": "projects",
      "description": "PROPERTY TYPES RELATION - Select which property types are available for this project. IMPORTANT: ORDER MATTERS - Property types display in the same order you select them here. First selected = First displayed on website. You can reorder by dragging items in the list. Tips: Select property types in the order you want them to appear, use the propertyTypeInfo JSON field to add specific details (ranges, status, images). This relation controls which property types are available for this project. Make sure to also fill the propertyTypeInfo JSON field with details."
    }
  }
}