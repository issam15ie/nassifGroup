{
  "kind": "collectionType",
  "collectionName": "units",
  "info": {
    "singularName": "unit",
    "pluralName": "units",
    "displayName": "Unit",
    "description": "Individual units within projects (Simplex, Duplex, Shops)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["simplex", "duplex", "shop"],
      "required": true
    },
    "size_min": {
      "type": "integer",
      "required": true
    },
    "size_max": {
      "type": "integer",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["available", "sold"],
      "default": "available",
      "required": true
    },
    "project": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::project.project",
      "inversedBy": "units"
    },
    "price": {
      "type": "decimal"
    },
    "description": {
      "type": "text"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}
